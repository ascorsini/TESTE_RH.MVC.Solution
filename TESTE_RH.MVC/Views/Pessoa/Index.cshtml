@model IEnumerable<TESTE_RH.MVC.Models.PessoaViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Pessoas</h1>


<div style="float: left;">
    <p>
        <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
    </p>
</div>
<form asp-controller="Pessoa" asp-action="Index" style="float: right;">
    <p>
        <input type="text" name="PessoaID" />
        <input type="submit" class="btn btn-primary" value="Procurar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PessoaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logradouro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PessoaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF_MASK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEP_MASK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PessoaID })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.PessoaID })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.PessoaID })
            </td>
        </tr>
}
    </tbody>
</table>
